<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="NewsItemAdContainerStyle">
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:padding">@dimen/item_padding</item>
    </style>

    <style name="NewsItemAdTypeStyle">
        <item name="android:gravity">center_vertical</item>
        <item name="android:text">@string/type_ad</item>
        <item name="android:textColor">@color/item_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="NewsItemAdTtileSytle">
        <item name="android:layout_marginStart">@dimen/item_padding</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">@color/ad_text</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NewsItemImageStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:scaleType">fitEnd</item>
    </style>

    <style name="NewsItemNewsContainerStyle">
        <item name="android:background">@drawable/bg_item</item>
        <item name="android:padding">@dimen/item_padding</item>
    </style>

    <style name="NewsItemNewsTitleStyle">
        <item name="android:gravity">start</item>
        <item name="android:textColor">@color/item_text_primary</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="NewsItemNewsSubtitleStyle">
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">@dimen/breaking_subtitle_padding</item>
        <item name="android:paddingBottom">@dimen/breaking_subtitle_padding</item>
        <item name="android:textColor">@color/item_text_subtitle</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NewsItemNewsDateStyle">
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/item_text_secondary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="NewsItemBreakingContainerStyle">
        <item name="android:background">@drawable/bg_breaking</item>
        <item name="android:padding">@dimen/item_padding</item>
    </style>

    <style name="NewsItemBreakingTitleStyle">android:textColor="@color/white"
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NewsItemBreakingSubtitleStyle">android:gravity="center_horizontal"
        <item name="android:padding">@dimen/breaking_subtitle_padding</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="NewsItemBreakingDateStyle">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>